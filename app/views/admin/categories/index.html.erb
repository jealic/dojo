<div class="container">
  <div class="margin-top-50">
    <ul class="nav">
      <li class="nav-item">
        <h3><%= link_to 'Category List', admin_categories_path, class: 'nav-link active' %></h3>
      </li>
      <li class="nav-item">
        <h3><%= link_to 'User List', admin_users_path, class: 'nav-link panel-page-inactive' %></h3>
      </li>
    </ul>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-7 new-edit-input">
        <%= simple_form_for [:admin, @category] do |f| %>
          <% if @category.name.present? %>
            <div class="container">
              <div class="row">
                <div class="col-7">
                  <%= f.input :name, label: false, placeholder: 'Enter category name' %>
                </div>
                <div class="col-5">
                  <%= f.button :submit, 'Update', class: 'btn btn-outline-info float-left' %>
                  <%= link_to 'Cancel', admin_categories_path, class: 'btn btn-outline-danger' %>
                </div>
              </div>
            </div>

          <% else %>
            <div class="container">
              <div class="row">
                <div class="col-8">
                  <%= f.input :name, label: false, placeholder: 'Enter category name' %>
                </div>
                <div class="col-4">
                  <%= f.button :submit, 'Create', class: 'btn btn-outline-info' %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %> 
      </div>
    </div>

    <table class="table table-bordered">
      <thead class="thead-light">
        <tr class="row mx-0">
          <th class="col-9 ">Name</th>
          <th class="col-3 text-center">Options</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="row mx-0">
            <th class="col-9"><%= category.name.capitalize %></th>
            <td class="col-3 text-center" ><%= link_to 'Edit', admin_categories_path(id: category.id), class: 'btn btn-outline-info btn-sm' %> <%= link_to 'Delete', admin_category_path(category), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>