<div class="">
  <ul class="nav">
    <li class="nav-item">
      <h3><%= link_to 'Category List', admin_categories_path, class: 'nav-link active' %></h3>
    </li>
    <li class="nav-item">
      <h3><%= link_to 'User List', admin_users_path, class: 'nav-link panel-page-inactive' %></h3>
    </li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div class="col-7 new-edit-input">
      <%= simple_form_for [:admin, @category], html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, label: false, placeholder: 'Enter category name' %>       
        <%= f.button :submit, class: 'btn btn-outline-info' %>
      <% end %> 
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="thead-light">
      <tr class="row mx-0">
        <th class="col-9 ">Name</th>
        <th class="col-3 text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr class="row mx-0">
          <th class="col-9"><%= category.name.capitalize %></th>
          <td class="col-3 text-center" ><%= link_to 'Edit', admin_categories_path(id: category.id), class: 'btn btn-outline-info btn-sm' %> <%= link_to 'Delete', admin_category_path(category), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
