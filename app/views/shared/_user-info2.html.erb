<div class="inline-blk text-center">
  <%= link_to user_path(user), class: 'profile-link' do %>
    <% if user.avatar? %>
      <%= image_tag user.avatar, width: '100px', class: 'img-thumbnail' %>
    <% else %>
      <div class="text-center pb-3">
        <%= fa_icon 'user-circle-o 4x' %>
      </div>
    <% end %>
    <h5 class="mt-3"><%= user.name %></h5>
  <% end %>
  <%= render partial: 'shared/friend-btn', locals: {user: user} %>
</div>