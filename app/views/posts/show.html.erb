<div class="post-show-title">
  <div class="container">
    <h4 class="weight-700"><%= @post.title %></h4>
  </div>
</div>

<div class="row post-show-row">
  <div class="col-3">
    <div class="text-center py-5">
      <% if @post.user.avatar? %>
        <%= image_tag @post.user.avatar, width: '150px', class: 'img-thumbnail' %>
      <% else %>
        <div class="text-center">
          <%= fa_icon 'user-circle-o 5x' %>
        </div>
      <% end %>
      <h4 class="mt-3"><%= @post.user.name %></h4>
      <% unless @post.user == current_user %>
        <%= link_to root_path, class: 'btn btn-outline-success' do %>
          <%= fa_icon 'plus' %> Friend
        <% end %>
      <% end %>

    </div>
  
  </div>
  <div class="col-9 post-show-box pt-5 px-5">
    <% if @post.image? %>
      <%= image_tag @post.image, width: '450px', class: 'img-thumbnail' %><br><br>  
    <% end %>
    
    <p style="font-size: 20px;"><%= @post.content %></p>
    <% if @post.user == current_user %>
      <div class="comment-edit">
        <%= link_to edit_post_path(@post) do %>
          <%= fa_icon 'edit', style: 'font-size: 27px;' %> 
        <% end %>
        <%= fa_icon 'times', style: 'border: 2px solid #000; border-radius: 3px; padding: 2px 4px;' %>  
      </div>  
    <% end %>
  </div>

</div>

<% if @post.replies %>
  <% @replies.each do |reply| %>
    <div class="row post-show-reply-row bg-light-yellow">
      <div class="col-3">
        <div class="text-center py-4">
          <% if reply.user.avatar? %>
            <%= image_tag reply.user.avatar, width: '50px', class: 'img-thumbnail' %>
          <% else %>
            <div class="text-center">
              <%= fa_icon 'user-circle-o 5x' %>
            </div>
          <% end %>
          <h5 class="mt-3"><%= reply.user.name %></h5>
          <% unless reply.user == current_user %>
            <%= link_to root_path, class: 'btn btn-outline-success' do %>
              <%= fa_icon 'plus' %> Friend
            <% end %>
          <% end %>

        </div>
      </div>
      <div class="col-9 post-show-box py-4 px-5">
        <p><%= reply.comment %></p>
        <% if reply.user == current_user %>
          <div class="comment-edit">
            <%= link_to do %>
              <%= fa_icon 'edit', style: 'font-size: 27px;' %> 
            <% end %>
            <%= fa_icon 'times', style: 'border: 2px solid #000; border-radius: 3px; padding: 2px 4px;' %>       
          </div>
        <% end %>
      </div>
      
    </div>
  <% end %>
<% end %>