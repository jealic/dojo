<div class="waiting">
  <div class="container">
    <% @waiting_ones.each do |user| %>
      <div class="inline-blk">
        <% if user.avatar? %>
          <%= image_tag user.avatar, width: '100px', class: 'img-thumbnail' %>
        <% else %>
          <div class="text-center">
            <%= fa_icon 'user-circle-o 3x' %>
          </div>
          <h5 class="mt-3"><%= reply.user.name %></h5>
          <% unless user == current_user %>
            <%= link_to root_path, class: 'btn btn-outline-success' do %>
              <%= fa_icon 'plus' %> Friend
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>