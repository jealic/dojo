<div class="bg-light-yellow py-5 px-3">
  <div class="container">
    
    <% if @user.friendships.count == 0 %>
      <p class="weight-700">Haven't had any friends yet.</p>
    <% else %>
      <div class="text-center mb-4"><h5 style="color: gray;">Waiting for Response</h5></div>
      <% @waiting_ones.each do |user| %>

        <div class="inline-blk text-center">
          <%= link_to user_path(user) do %>
            <% if user.avatar? %>
              <%= image_tag user.avatar, width: '100px', class: 'img-thumbnail' %>
            <% else %>
              <div class="text-center">
                <%= fa_icon 'user-circle-o 3x' %>
              </div>
            <% end %>
            <h5 class="mt-3"><%= user.name %></h5>
          <% end %>
          <%= invite_btn(user) %>
        </div>
      <% end %>
    <% end %>
    
  </div>
</div>

<div class="bg-yellow py-5 px-3">
  <div class="container">
    <% @inviters.each do |user| %>
      <div class="inline-blk text-center">
        <%= link_to user_path(user) do %>
          <% if user.avatar? %>
            <%= image_tag user.avatar, width: '100px', class: 'img-thumbnail' %>
          <% else %>
            <div class="text-center">
              <%= fa_icon 'user-circle-o 3x' %>
            </div>
          <% end %>
          <h5 class="mt-3"><%= user.name %></h5>
        <% end %>
        <%= button_to 'Accept', accept_friend_user_path(user), class: "btn btn-success mb-2 friend-btn" %>
        <%= button_to 'Ignore', ignore_friend_user_path(user), class: "btn btn-outline-secondary friend-btn" %>
      </div>
    <% end %>
  </div>
</div>