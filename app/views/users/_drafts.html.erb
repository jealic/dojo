<table class="table">
  <% if @drafts.count == 0 %>
    <tr class= "bg-light-yellow">
      <th>Have no drafts at present.<th>
    </tr>
  <% else %>
    <% @drafts.each do |draft| %>
    <tr class="bg-light-yellow">
      <th><%= link_to draft.title, post_path(draft) %></th>
      <td>draft</td>
      <td><%= draft.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td>
        <%= link_to edit_post_path(draft) do %>
          <%= fa_icon 'edit', style: 'font-size: 27px;' %>
        <% end %>
        <%= link_to post_path(draft), method: :delete, data: {confirm: "Are you sure?"} do %>
          <%= fa_icon 'times', style: 'border: 2px solid #007bff; border-radius: 3px; padding: 2px 4px;' %>
        <% end %>
      </td>
    </tr>
    <% end %>
    <%= paginate @drafts %>
  <% end %>
</table>