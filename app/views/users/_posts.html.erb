<table class="table">
  <% if @posts.count == 0 %>
    <tr class= "bg-light-yellow">
      <th>Have no posts yet.<th>
    </tr>
  <% else %>
    <% @posts.each do |post| %>
    <tr class="bg-light-yellow">
      <th><%= link_to post.title, post_path(post) %></th>
      <td>published</td>
      <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <% if post.user == current_user %>
      <td>
        <%= link_to edit_post_path(post) do %>
          <%= fa_icon 'edit', style: 'font-size: 27px;' %>
        <% end %>
        <%= link_to post_path(post), method: :delete, data: {confirm: "Are you sure?"} do %>
          <%= fa_icon 'times', style: 'border: 2px solid #007bff; border-radius: 3px; padding: 2px 4px;' %>
        <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
  <% end %>
</table>
<br>
<%= paginate @posts %>